<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FoodAboutActivity">

    <swu.xl.healthdiet.FoodAbout.MyViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        />

    <swu.xl.pagecontrollerlibrary.PagerController
        android:id="@+id/page_controller"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pageResource="@drawable/page_controller_shape"
        app:pagePadding="30"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/page_controller">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

        <TextView
            android:id="@+id/about_tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当前版本:  v1.0"
            android:drawableLeft="@mipmap/icon_door"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

        <TextView
            android:id="@+id/about_tv_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="联系电话:  400-88886888"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:drawableLeft="@mipmap/icon_phone"
            android:drawablePadding="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

        <TextView
            android:id="@+id/about_tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="公司地址:  西南大学荣昌校区B栋"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:drawableLeft="@mipmap/icon_world"
            android:drawablePadding="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

        <TextView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分享软件"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:drawableLeft="@mipmap/icon_flash"
            android:drawablePadding="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>
    </LinearLayout>

</RelativeLayout>